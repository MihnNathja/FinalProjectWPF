<Page x:Class="FinalProject.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Border Background="#ffffff"  CornerRadius="0 10 10 0">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Đăng Nhập" HorizontalAlignment="Center"
                 Margin="20" FontWeight="Black" FontSize="40"
                />
            <TextBlock 
                Text="Tên đăng nhập" FontSize="20" FontWeight="Bold"
                   Margin="10 "/>
            <TextBox x:Name="UserName" Width="350" />

            <TextBlock Text="Mật Khẩu" FontSize="20" FontWeight="Bold"
                        Margin="10 "/>
            <PasswordBox Width="350" Height="35"/>

            <Button Content="Đăng Nhập"  FontSize="25" FontWeight="Bold"
                Margin="50" Click="btnDangNhap_Click">

            </Button>

        </StackPanel>
    </Border>
</Page>
