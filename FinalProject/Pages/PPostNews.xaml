<Page x:Class="FinalProject.Pages.PPostNews"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PPostNews" Loaded="Page_Loaded">

    <Grid x:Name="WCreateJobPage" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">
            <ScrollViewer>
                <WrapPanel x:Name="newsList">

                </WrapPanel>
            </ScrollViewer>
        </Grid>



        <Grid Grid.Row="1">
            <Button x:Name="btnThemTin" Content="Thêm tin tìm việc" Width="200" Height="50" FontSize="20"
                VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="20"
                Click="btnThemTin_Click"/>
        </Grid>

    </Grid>
</Page>
