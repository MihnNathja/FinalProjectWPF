    <materialDesign:Card
        Margin="5"
        Width="200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
            Height="140" />
                <RowDefinition
            Height="*" />
                <RowDefinition
            Height="Auto" />
            </Grid.RowDefinitions>
            <Image
          Height="140"
          Source="/Image/company_cover.jpg"
          Stretch="UniformToFill" />
            <Rectangle Grid.Row="0" Height="100" Width="100"
                      Margin="0,0,0,-30"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Bottom">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Image/logo.png"></ImageBrush>
                </Rectangle.Fill>
            </Rectangle>
            <StackPanel
          Grid.Row="1"
          Margin="8,24,8,0">
                <TextBlock x:Name="CompanyName"
            FontWeight="Bold">
          Company Name
                </TextBlock>
                <TextBlock x:Name="CompanyLocation"
            VerticalAlignment="Center"
            Text="Company info."
            TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel
          Grid.Row="2"
          Margin="8"
          HorizontalAlignment="Right"
          Orientation="Horizontal">
                <Button
            Width="30"
            Padding="2,0,2,0"
            materialDesign:RippleAssist.IsCentered="True"
            Style="{StaticResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon
              Kind="ShareVariant" />
                </Button>
                <Button
            Width="30"
            Padding="2,0,2,0"
            materialDesign:RippleAssist.IsCentered="True"
            Style="{StaticResource MaterialDesignToolButton}">
                    <materialDesign:PackIcon
              Kind="Heart" />
                </Button>
            
            </StackPanel>
        </Grid>
    </materialDesign:Card>
